# SQL Server 2000 connection (read-only attendance source)
DB_SERVER=127.0.0.1
DB_PORT=1433
DB_NAME=AXData
DB_USER=sa
DB_PASS=your_password

# Bootstrap admin user (created in SQLite app DB on first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
ADMIN_EMAIL=admin@hse-oilchem.com

# App SQLite DB (separate from AXData)
APP_DB_PATH=./data/app.db

# Optional encryption key for SMTP password at rest (recommended).
# If empty, backend falls back to JWT_SECRET. If both are empty, password is stored plaintext with warning.
APP_ENCRYPTION_KEY=

# JWT
JWT_SECRET=replace-with-long-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=480
PASSWORD_RESET_EXPIRY_MINUTES=60

# CORS (comma-separated allowlist)
ALLOW_ORIGIN=https://admin.hse-oilchem.com,http://localhost:3000

# Basic in-memory rate limiting
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX_REQUESTS=120

# Cross-midnight shift handling: next-day OUT window cutoff hour (0-23)
SHIFT_OUT_CUTOFF_HOURS=12
# Force invert IN/OUT mapping for calculations (1=true, 0=false)
INOUT_SWAP=0

# Cookie behavior
COOKIE_DOMAIN=
COOKIE_SECURE=false

# Frontend base URL used in reset links
FRONTEND_BASE_URL=http://localhost:3000

# SMTP runtime timeout (seconds)
SMTP_TIMEOUT_SECONDS=20
